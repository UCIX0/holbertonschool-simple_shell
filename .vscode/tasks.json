{
	"version": "2.0.0",
	"tasks": [
		{
		"label": "build",
		"type": "shell",
		"command": "gcc",
		"args": [
			"-std=gnu89",
			"-g",
			"${workspaceFolder}/*.c",
			"-o",
			"${workspaceFolder}/hsh"
		],
		"group": {
			"kind": "build",
			"isDefault": true
		},
		"problemMatcher": ["$gcc"],
		"detail": "Compiling C program with gnu89 standard"
		}
	]
}
